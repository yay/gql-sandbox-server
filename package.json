{
	"name": "gql-sandbox-server",
	"type": "module",
	"version": "1.0.0",
	"description": "Sandbox GraphQL server",
	"author": "Vitalii Kravchenko",
	"license": "MIT",
	"exports": "./dist/index.js",
	"scripts": {
		"dev": "nodemon -I --exec node --experimental-specifier-resolution=node --loader ts-node/esm ./src/app.ts",
		"build": "tsc",
		"start": "node ./dist/app.js",
		"check": "biome check --write ./src",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"codegen": "graphql-codegen --config codegen.ts",
		"codegen:watch": "graphql-codegen --watch --config codegen.ts"
	},
	"dependencies": {
		"@apollo/datasource-rest": "6.2.2",
		"@apollo/server": "4.10.0",
		"@faker-js/faker": "9.2.0",
		"@graphql-tools/schema": "10.0.10",
		"dotenv": "16.4.5",
		"express": "4.21.1",
		"graphql": "16.8.1",
		"graphql-subscriptions": "3.0.0",
		"graphql-ws": "5.16.0",
		"node-html-parser": "6.1.12",
		"ws": "8.18.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@graphql-codegen/cli": "5.0.3",
		"@graphql-codegen/introspection": "4.0.3",
		"@graphql-codegen/typescript": "4.1.1",
		"@graphql-codegen/typescript-resolvers": "4.4.0",
		"@jest/types": "29.6.3",
		"@parcel/watcher": "2.5.0",
		"@types/cors": "2.8.17",
		"@types/express": "4.17.21",
		"@types/jest": "29.5.14",
		"@types/node": "22.9.0",
		"@types/ws": "8.5.13",
		"cors": "2.8.5",
		"jest": "29.7.0",
		"nodemon": "3.1.7",
		"ts-jest": "29.2.5",
		"ts-node": "10.9.2",
		"ts-node-dev": "2.0.0",
		"typescript": "5.6.3"
	},
	"packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee"
}
